<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="stock_picking_mail_template" model="mail.template">
            <field name="name">Notificaci√≥n de Transferencia</field>
            <field name="model_id" ref="stock.model_stock_picking" />
            <field name="subject">Se ha registrado la transferencia ${object.name}</field>
            <field name="email_from">${(object.company_id.partner_id.email}</field>
            <field name="email_to">${(object.partner_id.email}</field>
            <field name="body_html" type="html">
                <div>
                    Dear ${object.name},<br />
                    Thank you for your inquiry.<br />
                    hola mundo desde ODOO

                </div>
            </field>
            <field name="report_template" ref="stock.action_report_picking" />
            <field name="report_name">Guia_despacho_${(object.name or '').replace('/','_')}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="auto_delete" eval="True" />
        </record>
    </data>
</odoo>